<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Tyson Hood</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                <a type="button" class="btn btn-warning" href="/adventures/<%= adventure._id %>/edit">Edit</a>
                <form id="delete" action="/adventures/<%= adventure._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail" id="showImage">
                <img class="image-responsive" src="<%= adventure.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"><a type="button" class="btn btn-link" href="/adventures">Go Back</a></h4>
                    <h4><a><%= adventure.name %></a></h4>
                    <p id="adventureDesc"><%- adventure.desc %></p>
                </div>
            </div>
            <div class="well">
                <h3 class="commentTitle">Have a comment or question?</h3>
                <hr>
                <% adventure.comments.forEach(function(comment) {%>
                    <p>
                        <strong><%= comment.author %></strong>: <%= comment.text %>
                    </p>
                <% });%>
                <hr>
                <div class="text-center">
                <h3 class="commentTitle">Write your comment here!</h3>
                <div style="width: 60%; margin: 30px auto;">
                  <!--get the form data and add to adventures array-->
                  <form action="/adventures/<%= adventure._id%>/comments" method="POST">
                    <div class="form-group">
                      <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                    </div>
                    <div class="form-group">
                      <textarea class="form-control"  type="text" name="comment[text]" placeholder="Text..." rows="6"></textarea>
                    </div>
                    <div class="form-group">
                      <button class="btn btn-lg btn-success btn-block">Submit</button>
                    </div>
                  </form>
                </div>
                </div>
            </div>
        </div>
        <div class="description show">
        </div>
        
    </div>
</div>
<% include ../partials/footer %>