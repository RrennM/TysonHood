<% include ./partials/header %>
<div class="container">
    <div class="row">
    <h1>Edit: <%= blog.title %></h1>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <label>Text</label>
                <textarea type="text" class="form-control" name="blog[body]" rows="6"><%- blog.body %></textarea>
            </div>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>
</div>

<% include ./partials/footer %>