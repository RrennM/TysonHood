<% include partials/header %>

<div class="container">

   <header class="jumbotron"> 
      <div class="container">
         <h1>This is my adventures page!</h1>
         <p>Here are some of the great places I've explored!</p>
         <p>
            <a class="btn btn-primary btn-lg" href="/adventures/new">Add new adventures here!</a>
         </p>
      </div>
   </header>
   
   <div class="row text-center" style="display:flex; flex-wrap:wrap;">
      <!--Loop through the adventures array(fornow) and display-->
      <% adventures.forEach(function(adventure) { %>
      <div class="col-md-3 col-sm-6">
         <div class="thumbnail">
           <img src="<%= adventure.image %>">
            <div class="caption">
               <h4> <%= adventure.name %> </h4>
            </div>
            <p>
               <a class="btn btn-primary" href="/adventures/<%= adventure._id %>">More Info</a>
            </p>
         </div>
       </div>
      <% }); %>
   </div>
</div>

<% include partials/footer %>