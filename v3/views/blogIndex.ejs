<% include ./partials/header %>
<div class="container page-title" >
    <h1>Welcome to My Blog!</h1>
    <a class="btn btn-lg btn-primary" id="newBlogBtn" href="/blogs/new">Post New Blog</a>
</div>
    <% blogs.forEach(function(blog) {%>
        <div class="container index">
            <h2><%=blog.title %></h2> 
            <img src="<%-blog.image %>" class="blogIndexImage">
            <div class="content">
               <span><%=blog.created.toDateString() %></span>
            </div>
            <p><%=blog.body.substring(0, 100) %>...</p>
            <a type="button" class="btn btn-info" href="/blogs/<%= blog._id %>">Read More</a>
        </div>
    <% }); %>

<% include ./partials/footer %>